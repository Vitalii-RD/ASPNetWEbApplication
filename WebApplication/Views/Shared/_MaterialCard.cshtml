@model Material

<div class="col-sm-6 col-md-4 col-lg-3">
    <div class="thumbnail p-2">
        <img src="@Model.ImageThumbnailUrl" alt="">
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Material" asp-action="Details" asp-route-id="@Model.MaterialId">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-pieId="@Model.MaterialId">Add to cart</a>
            </p>
        </div>
    </div>
</div>